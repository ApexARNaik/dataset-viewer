generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("TURSO_DATABASE_URL")
}

model Teammate {
  id        String    @id @default(cuid())
  name      String    @unique
  passcode  String
  datasets  Dataset[]
  createdAt DateTime  @default(now())
}

model Dataset {
  id          String   @id @default(cuid())
  instruction String
  input       String
  output      String
  uploadedBy  Teammate @relation(fields: [teammateId], references: [id])
  teammateId  String
  createdAt   DateTime @default(now())
}
